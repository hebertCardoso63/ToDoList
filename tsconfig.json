{
    "compilerOptions": {
        "typeRoots": [
            "./types"
        ],
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "outDir": "./dist",
        "rootDir": "./",
        "sourceMap": true // Garante que os mapas de origem sejam gerados
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}